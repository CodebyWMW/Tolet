<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.tolet.TenantController" style="-fx-background-color: #0f1115;" prefWidth="900" prefHeight="600">
    <stylesheets>
        <URL value="@style.css" />
        <URL value="@dark-style.css" />
        <URL value="@dark-theme.css" />
    </stylesheets>

    <left>
        <VBox spacing="0" style="-fx-background-color: #0b1220; -fx-border-color: #1f2a44; -fx-border-width: 0 1 0 0;" prefWidth="250">
            <padding>
                <Insets top="20" right="0" bottom="20" left="0"/>
            </padding>

            <Label text="Project To-Let" textFill="#60a5fa" style="-fx-font-weight: bold; -fx-font-size: 20px;">
                <padding>
                    <Insets left="24" bottom="30"/>
                </padding>
            </Label>

            <ToggleButton text="Dashboard" selected="true" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: #1f2937; -fx-text-fill: #93c5fd; -fx-font-weight: bold; -fx-padding: 12 24;"/>
            <Button text="Messages" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: #cbd5e1; -fx-padding: 12 24;"/>
            <Button text="My Bookings" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: #cbd5e1; -fx-padding: 12 24;"/>
            <Button text="Saved" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: #cbd5e1; -fx-padding: 12 24;"/>

            <Region VBox.vgrow="ALWAYS"/>

            <Button text="Log Out" onAction="#onLogout" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: #f87171; -fx-padding: 12 24;"/>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" styleClass="edge-to-edge">
            <VBox spacing="24" style="-fx-padding: 32;">
                <HBox alignment="TOP_RIGHT">
                    <ToggleButton fx:id="themeToggle" onAction="#onThemeToggle" styleClass="theme-switch">
                        <graphic>
                            <Region styleClass="switch-knob" />
                        </graphic>
                    </ToggleButton>
                </HBox>

                <VBox spacing="4">
                    <Label fx:id="welcomeLabel" text="Welcome Back!" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #f9fafb;"/>
                    <Label text="Find your perfect home" style="-fx-font-size: 14px; -fx-text-fill: #9ca3af;"/>
                </VBox>

                <HBox alignment="CENTER_LEFT" style="-fx-background-color: #111827; -fx-background-radius: 12; -fx-border-color: #1f2a44; -fx-border-radius: 12; -fx-padding: 12;">
                    <Label text="ðŸ”" style="-fx-padding: 0 10 0 5; -fx-text-fill: #9ca3af;"/>
                    <TextField fx:id="searchField" promptText="Search by location, property type, or features..." HBox.hgrow="ALWAYS" style="-fx-background-color: transparent; -fx-font-size: 14px; -fx-text-fill: #e5e7eb;"/>
                </HBox>

                <FlowPane fx:id="filterContainer" hgap="8" vgap="8">
                </FlowPane>

                <HBox styleClass="status-card" spacing="15" alignment="CENTER_LEFT">
                    <Label text="ðŸ•’" style="-fx-font-size: 20px;"/>
                    <VBox>
                        <Label text="Booking Pending" style="-fx-font-weight: bold; -fx-text-fill: #fbbf24;"/>
                        <Label text="Your request for 'Modern Apartment' is being reviewed." style="-fx-text-fill: #f59e0b;"/>
                    </VBox>
                </HBox>

                <VBox spacing="16">
                    <HBox alignment="CENTER_LEFT">
                        <Label text="Available Properties" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #f9fafb;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="totalCountLabel" text="0 properties" style="-fx-text-fill: #9ca3af;"/>
                    </HBox>

                    <FlowPane fx:id="propertiesGrid" hgap="24" vgap="24" prefWrapLength="1000">
                    </FlowPane>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
