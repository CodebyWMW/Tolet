<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Rectangle?>

<VBox styleClass="house-card" spacing="10" prefWidth="280" style="-fx-background-color: #30302e; -fx-background-radius: 12;"
    xmlns="http://javafx.com/javafx/25"
    xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

    <!-- Placeholder for house image -->
    <Rectangle width="260" height="160" styleClass="house-image-placeholder" arcWidth="8" arcHeight="8" style="-fx-fill: #474743;" />

    <VBox spacing="5">
        <Label text="৳ 15,000/month" styleClass="house-price" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #ff7547;" />
        <Label text="2 Bed • 1 Bath • 850 sqft" styleClass="house-details" style="-fx-text-fill: #e8fff5;" />
        <Label text="Mirpur, Dhaka" styleClass="house-location" style="-fx-text-fill: #faa387;" />
    </VBox>
</VBox>
