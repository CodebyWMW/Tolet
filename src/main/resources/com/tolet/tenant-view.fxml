<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="900" style="-fx-background-color: #f9fafb;" stylesheets="@style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.tolet.TenantController">

    <left>
        <VBox prefWidth="250" spacing="0" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 0 1 0 0;">
            <padding>
                <Insets bottom="20" left="0" right="0" top="20" />
            </padding>

            <Label style="-fx-font-weight: bold; -fx-font-size: 20px;" text="Project To-Let" textFill="#2563eb">
                <padding>
                    <Insets bottom="30" left="24" />
                </padding>
            </Label>

            <ToggleButton maxWidth="Infinity" selected="true" style="-fx-alignment: CENTER_LEFT; -fx-background-color: #eff6ff; -fx-text-fill: #2563eb; -fx-font-weight: bold; -fx-padding: 12 24;" text="Dashboard" />
            <Button maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: #4b5563; -fx-padding: 12 24;" text="Messages" />
            <Button maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: #4b5563; -fx-padding: 12 24;" text="My Bookings" />
            <Button maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: #4b5563; -fx-padding: 12 24;" text="Saved" />
         <Button mnemonicParsing="false" prefHeight="23.0" prefWidth="81.0" text="Hide" />

            <Region VBox.vgrow="ALWAYS" />

            <Button maxWidth="Infinity" onAction="#onLogout" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: #dc2626; -fx-padding: 12 24;" text="Log Out" />
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" styleClass="edge-to-edge">
            <VBox spacing="24" style="-fx-padding: 32;">
                <HBox alignment="TOP_RIGHT">
                    <ToggleButton fx:id="themeToggle" onAction="#onThemeToggle" styleClass="theme-switch">
                        <graphic>
                            <Region styleClass="switch-knob" />
                        </graphic>
                    </ToggleButton>
                </HBox>

                <VBox spacing="4">
                    <Label fx:id="welcomeLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #111827;" text="Welcome Back!" />
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #6b7280;" text="Find your perfect home" />
                </VBox>

                <HBox alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #d1d5db; -fx-border-radius: 12; -fx-padding: 12;">
                    <Label style="-fx-padding: 0 10 0 5; -fx-text-fill: #9ca3af;" text="ðŸ”" />
                    <TextField fx:id="searchField" promptText="Search by location, property type, or features..." style="-fx-background-color: transparent; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                </HBox>

                <FlowPane fx:id="filterContainer" hgap="8" vgap="8">
                </FlowPane>

                <HBox alignment="CENTER_LEFT" spacing="15" styleClass="status-card">
                    <Label style="-fx-font-size: 20px;" text="ðŸ•’" />
                    <VBox>
                        <Label style="-fx-font-weight: bold; -fx-text-fill: #854d0e;" text="Booking Pending" />
                        <Label style="-fx-text-fill: #a16207;" text="Your request for 'Modern Apartment' is being reviewed." />
                    </VBox>
                </HBox>

                <VBox spacing="16">
                    <HBox alignment="CENTER_LEFT">
                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #111827;" text="Available Properties" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="totalCountLabel" style="-fx-text-fill: #6b7280;" text="0 properties" />
                    </HBox>

                    <FlowPane fx:id="propertiesGrid" hgap="24" prefWrapLength="1000" vgap="24">
                    </FlowPane>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
