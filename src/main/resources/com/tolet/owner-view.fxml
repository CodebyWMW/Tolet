<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.tolet.OwnerController">
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10;">
            <Label text="Owner Dashboard" style="-fx-font-size: 20px;"/>
            <Region HBox.hgrow="ALWAYS" />
            <ToggleButton fx:id="themeToggle" text="Dark Mode" onAction="#onThemeToggle" />
            <Button text="Back" onAction="#onBack" />
            <Button text="Logout" onAction="#onLogout" />
        </HBox>
    </top>
    <left>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #9f9c9c;">
            <Label text="Add New Listing" style="-fx-font-weight: bold;"/>
            <TextField fx:id="locField" promptText="Location"/>
            <ComboBox fx:id="typeBox" promptText="Type" prefWidth="150"/>
            <TextField fx:id="rentField" promptText="Rent Amount"/>
            <Button text="Post Ad" onAction="#onAddListing" style="-fx-background-color: green; -fx-text-fill: white;"/>
        </VBox>
    </left>
    <center>
        <TableView fx:id="houseTable">
            <columns>
                <TableColumn fx:id="colLoc" text="Location" prefWidth="200"/>
                <TableColumn fx:id="colType" text="Type" prefWidth="100"/>
                <TableColumn fx:id="colRent" text="Rent" prefWidth="100"/>
            </columns>
        </TableView>
    </center>
</BorderPane>