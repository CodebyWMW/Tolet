<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="600" prefWidth="900" style="-fx-background-color: #0b0b0b;" stylesheets="@dark-theme.css,@dark-style.css"
    xmlns:fx="http://javafx.com/fxml/1"
    xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.tolet.AdminController">
    <HBox alignment="TOP_RIGHT" StackPane.alignment="TOP_RIGHT" style="-fx-padding: 16;">
        <ToggleButton fx:id="themeToggle" onAction="#onThemeToggle" styleClass="theme-switch">
            <graphic>
                <Region styleClass="switch-knob" />
            </graphic>
        </ToggleButton>
    </HBox>
    <VBox alignment="CENTER" spacing="20">
        <Label style="-fx-font-size: 24px; -fx-text-fill: #f9fafb;" text="Admin Dashboard" />
        <Label style="-fx-text-fill: #9ca3af;" text="Feature Coming Soon: Verify NID/Docs" />
        <HBox spacing="10" />
        <Button onAction="#onLogout" text="Logout" />
    </VBox>
</StackPane>
